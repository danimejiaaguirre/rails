<%- model_class = Winner -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nameteam) %>:</strong></dt>
  <dd><%= @winner.nameteam %></dd>
  <dt><strong><%= model_class.human_attribute_name(:namemember) %>:</strong></dt>
  <dd><%= @winner.namemember %></dd>
  <dt><strong><%= model_class.human_attribute_name(:score) %>:</strong></dt>
  <dd><%= @winner.score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dategame) %>:</strong></dt>
  <dd><%= @winner.dategame %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              winners_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_winner_path(@winner), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              winner_path(@winner),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
