<%= simple_form_for(@question, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>
  <%= display_base_errors @question %>

  <%= f.input :description, :label => "descripcion",  :required => true %>

    
  
  <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', questions_path, :class => 'btn btn-small' %>
  </div>
<% end %>

