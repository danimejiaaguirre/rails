<tr id=<%= "member_#{member.id}" %>>


  <td><%= member.id %></td>
  <td><%= member.name %></td>
  <td>
    <%= link_to 'Mostrar', team_member_path(@team, member), :remote => true, :class => 'btn btn-mini' %>
    <%= link_to 'Editar', edit_team_member_path(@team, member), :remote => true,
        :class => 'btn btn-mini' %>
    <%= link_to 'Eliminar', team_member_path(@team, member), 
        :data => { :confirm => 'Esta Seguro?' },
        :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>

